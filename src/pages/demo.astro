---
import "../styles/global.css"
import Layout from "../layouts/MainLayout.astro"
import { Button } from "@/components/ui/button"
import { Input } from "@/components/ui/input"
---

<Layout title="Demo Page">
  <main class="container mx-auto p-8">
    <div class="flex min-h-[600px] flex-col items-center justify-center gap-6 border-2 border-red-500">
      <h1 class="scroll-m-20 text-4xl font-extrabold tracking-tight lg:text-5xl">Demo Page</h1>

      <div class="w-full max-w-sm space-y-4">
        <Input type="text" placeholder="Type something..." client:load />

        <Button client:load variant="default" className="w-full bg-black hover:bg-black/90"> Click me! </Button>
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    min-height: 100vh;
  }
</style>
